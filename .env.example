# Description: Example of .env file
NUXT_NITRO_PRESET=cloudflare-module # node-server or cloudflare-module

NUXT_APP_URL=http://localhost:3000 # Base URL of your app
NUXT_APP_NAME=Quillio
NUXT_APP_NOTIFY_EMAIL="noreply@notifications.getquillio.com"
NUXT_APP_CONTACT_EMAIL="admin@getquillio.com"
NUXT_APP_REPO=https://github.com/paulchrisluke/quill-nuxsaas/
NUXT_APP_STORAGE=r2 # r2, s3 or local

# when NUXT_APP_STORAGE is local
NUXT_LOCAL_UPLOAD_DIR=./uploads
NUXT_LOCAL_PUBLIC_PATH=/uploads

# Feature Flags
NUXT_ENABLE_YOUTUBE_INGESTION=false

# Auth
NUXT_BETTER_AUTH_SECRET='' # Secret key for JWT

DATABASE_URL=postgres://postgres:@localhost:5432/getquillio
NUXT_REDIS_URL=redis://localhost:6379

NUXT_GH_CLIENT_ID=your-github-client-id
NUXT_GH_CLIENT_SECRET=your-github-client-secret

NUXT_GOOGLE_CLIENT_ID=your-google-client-id
NUXT_GOOGLE_CLIENT_SECRET=your-google-client-secret

NUXT_RESEND_API_KEY=your-resend-api-key

# PAYMENT
NUXT_PAYMENT=stripe

# STRIPE
NUXT_STRIPE_SECRET_KEY=your-stripe-secret-key
NUXT_STRIPE_WEBHOOK_SECRET=your-stripe-webhook-key

# Conversation quota overrides (optional)
# Leave paid limit empty or 0 to represent unlimited conversations on paid plans
NUXT_CONVERSATION_QUOTA_ANONYMOUS=10
NUXT_CONVERSATION_QUOTA_VERIFIED=50
NUXT_CONVERSATION_QUOTA_PAID=0

# Cloudflare
NUXT_CF_HYPERDRIVE_ID=cloudflare-hyperdrive-id #  Required when using cloudflare-module

# when NUXT_APP_STORAGE is r2
NUXT_CF_ACCOUNT_ID=your_account_id_here
NUXT_CF_ACCESS_KEY_ID=your_access_key_id_here
NUXT_CF_SECRET_ACCESS_KEY=your_secret_access_key_here
# https://dash.cloudflare.com/?to=/:account/r2/api-tokens
NUXT_CF_R2_BUCKET_NAME=your_bucket_name_here
NUXT_CF_R2_PUBLIC_URL=your_public_url_here

# Cloudflare AI Gateway / LLM Codex (reuses NUXT_CF_ACCOUNT_ID)
NUXT_CF_AI_GATEWAY_TOKEN=your-cf-ai-gateway-token
NUXT_OPENAI_BLOG_MODEL=gpt-4.1-mini
NUXT_OPENAI_BLOG_TEMPERATURE=0.6
NUXT_OPENAI_BLOG_MAX_OUTPUT_TOKENS=2200
NUXT_OPENAI_API_KEY=your-openai-api-key-here


# For testing
NUXT_TEST_DATABASE_URL=postgres://postgres:@localhost:5432/getquillio_test
NUXT_TEST_APP_URL=http://localhost:3000 # App URL for e2e test
NUXT_TEST_EMAIL=test@getquillio.com
NUXT_TEST_PASSWORD=test-password
NUXT_ADMIN_EMAIL=admin@getquillio.com # Admin user email for e2e tests
NUXT_ADMIN_PASSWORD=admin-password # Admin user password for e2e tests

# Upstream Sync Configuration (optional)
# The sync-upstream.sh script uses git remotes to merge updates from nuxt-better-auth-saas
# Default remote name is "template". To use a different remote name, set:
# UPSTREAM_REMOTE=your-remote-name
#
# To set up the upstream remote, run:
# git remote add template https://github.com/HouseOfBetterAuth/nuxt-better-auth-saas.git
#
# See docs/SYNC_UPSTREAM.md for more information
